// Array arguments
function saludar()
{
    if (arguments.length == 0) // No hay parámetros
        alert("Hola");
    else
    {
        cadena = "Hola " + arguments[0]; // Hola y el nombre
        alert(cadena);
        for(let x = 1; x < arguments.length; x++) // Un alert por cada uno de los parámetros de más.
            alert(arguments[x]);
    }
}

// llamadas
saludar();
saludar("Nieves");
saludar("Nieves", "Ruiz");


